{
    "source": {
        "include": ["public", "scripts", "src"],
        "exclude": ["scripts/cache"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "recurse": true,
        "destination": "./documentation/"
    }
}
